<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_top_background"
    android:gravity="center"
    android:minWidth="400dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:tag="layout/dialog_file_picker_0">

    <com.bb.allmediafilepicker.utils.FlowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_22"
        android:orientation="horizontal"
        app:flChildSpacing="@dimen/dp_22"
        app:flRowSpacing="@dimen/dp_8">

        <LinearLayout
            android:id="@+id/llImageCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivImageCamera"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_black"
                android:padding="@dimen/dp_16"
                android:tint="@color/file_upload_colorPickerPrimary"
                app:srcCompat="@drawable/ic_menu_camera" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Image\nCamera"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llImageGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivImageGallery"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/circle_black"
                android:padding="@dimen/dp_16"
                android:tint="@color/file_upload_colorPickerSecondary"
                app:srcCompat="@drawable/ic_menu_gallery" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Image\nGallery"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVideoCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVideoCamera"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/circle_black"
                android:padding="@dimen/dp_16"
                android:tint="@color/file_upload_colorPickerPrimary"
                app:srcCompat="@drawable/ic_menu_video_camera" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Video\nCamera"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVideoGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivVideoGallery"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/circle_black"
                android:padding="@dimen/dp_16"
                android:tint="@color/file_upload_colorPickerSecondary"
                app:srcCompat="@drawable/ic_menu_video_gallery" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Video\nGallery"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFile"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/circle_black"
                android:padding="@dimen/dp_16"
                android:tint="@color/file_upload_colorPickerPrimary"
                app:srcCompat="@drawable/ic_file_white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="File"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </com.bb.allmediafilepicker.utils.FlowLayout>

</LinearLayout>
